{% extends 'NPSitemakerBundle::layout.html.twig' %}

{% form_theme form with ['NPSitemakerBundle:Form:fields.html.twig', 'NPSitemakerBundle:Form:collection.html.twig'] %}

{% block content %}
{% spaceless %}
<section>
    {% block edit_form_title %}
	<div class="section-header">
	    <h2>{{ ( translation_prefix ~ '.edit.title' )|trans({'%name%': entity}, bundle_name) }} <a href="/{{ entity.folder }}/" target="_blank" style="float:right;" >Aper√ßu</a></h2>
	</div>
    {% endblock %}
	<form class="form-horizontal" action="{{ path(route_form_action, { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
	{% block edit_form %}
            {{ form_widget(form) }}
	{% endblock %}
        {% block edit_form_actions %}
		<div class="form-actions">
            {% block edit_form_actions_list %}
			<input type="submit" class="btn btn-primary" value="{{ 'global.form_action.update'|trans([], 'NPSitemakerBundle') }}" >&nbsp;
			<a class="btn danger bui-confirm-popover-above" data-popover-title="{{ 'global.form_action.are_you_sure'|trans([], 'NPSitemakerBundle') }}" href="{{ path(route_delete, { 'id': entity.id }) }}" >{{ 'global.form_action.delete'|trans([], 'NPSitemakerBundle') }}</a>&nbsp;
			<a class="btn" href="{{ path(route_index) }}">{{ 'global.form_action.back_to_list'|trans([], 'NPSitemakerBundle') }}</a>
            {% endblock %}
		    </div>
        {% endblock %}
		</form>
	    </section>
{% endspaceless %}
{% endblock %}